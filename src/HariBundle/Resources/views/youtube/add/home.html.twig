{% extends "base.html.twig" %}
{% block body  %}
    {{ form_start(form, { 'attr' : { 'novalidate' : 'novalidate' } }) }}
    <div class="form-group">
        <label class="control-label">{{ form_label(form.text) }}</label>
        {{ form_widget(form.text, { 'attr' :{ 'class' : 'form-control' }}) }}
    </div>
    <div class="form-group">
        <label class="control-label">{{ form_label(form.file) }}</label>
        {{ form_widget(form.file, { 'attr' :{ 'class' : 'form-control' }}) }}
    </div>
    <input type="submit" value="Create" class="btn btn-default" />
    {{ form_end(form) }}
    <script src="{{ asset('frontend/libraries/dropzone/dropzone.js') }}"></script>
    {% endblock body %}
{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div id="boxes">
    <div id="dialog" class="window">
        {% trans_default_domain 'FOSUserBundle' %}

        {% if error %}
            <div class="text text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <center class="text text-info">Login</center>
                <form action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    <div class="form-group">
                        <label for="username" class="pull-left">{{ 'security.login.username'|trans }}:</label>
                        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" />
                    </div>
                    <div class="form-group">
                        <label for="password" class="pull-left">{{ 'security.login.password'|trans }}</label>
                        <input type="password" class="form-control" id="password" name="_password" required="required" />
                    </div>
                        
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    <div class="form-group" style="margin: 0px">
                        <input type="submit" class="btn btn-success" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    </div>
                </form>
                <a href="{{ path('hwi_oauth_service_redirect', {'service': 'google' }) }}"  class="btn btn-block btn-social btn-google" style='margin-top: 10px'>
                    <span class="fa fa-google"></span> Sign in with Google
                </a>
                
                <a class="btn btn-block btn-social btn-facebook" href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}">
                    <span class="fa fa-facebook"></span> Sign in with FaceBook
                </a>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
                    
</div>